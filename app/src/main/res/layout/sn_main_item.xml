<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="order"
            type="cn.com.yafo.yafopda.vm.SnOrderVM"/>
    </data>

    <RelativeLayout
        android:id="@+id/snMainItemLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:padding="10dp">
        <!--   单击事件 另外写法     android:onClick="@{()->vm.shout()}"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/orderCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@{`单号：`+order.code}"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/store"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/txt_big_size"
                        android:text="@{`仓库：`+order.storeCode}"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="14sp" />

                    <Space
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <ImageView
                        android:id="@+id/btDel"
                        android:gravity="center"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/delete" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EDEDED" />
                </LinearLayout>
                <TextView
                    android:id="@+id/customName"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@{`客户：`+order.custname}"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dpt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`部门：`+order.dpt}"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/biz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{` 业务：`+order.biz}"
                        android:textColor="@android:color/tab_indicator_text"
                        android:textSize="14sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/note"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@{`备注：`+order.note}"
                    android:textColor="@android:color/tab_indicator_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</layout>